<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>

{{#each posts as |post|}}
<div id="dashboard-posts" class="row mb-4 post">
    <div class="col-md-5">
        <h2>{{post.title}}
        </h2>
        <br>
        <p>Created by
            {{post.user.name}}
            on
            {{format_date post.date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{post.description}}
        </p>
        <br>
        <!-- Button trigger modal -->
        <button type='button' class='modal-read-more-btn' data-bs-toggle='modal' data-bs-target='#post-{{post.id}}'>
            See more of this post
        </button>
    </div>
    <input type="hidden" id="postId" value="{{id}}" />
    {{#if comments.length}}
    {{#each comments as |comment|}}
    <div class="align-items-center justify-content-center mb-2">
        <div class="comment-{{comment.id}}-text">
            <p class="mb-0 comment-{{comment.id}}-p">"{{comment.comment}}" </p>
            <p> {{comment.user.name}} ({{format_date comment.date_created}})</p>
        </div>
        {{/each}}
        {{/if}}
    </div>
    <div class='modal fade' id='post-{{post.id}}' tabindex='-1' role='dialog' aria-labelledby='exampleModalCenterTitle'
        aria-hidden='true'>
        <div class='modal-dialog modal-dialog-centered' role='document'>
            <div class='modal-content text-center'>

                <div class='modal-header'>
                    <h5 class='modal-title' id='exampleModalLongTitle'>{{post.title}}</h5>
                </div>

                <div class='modal-body'>
                    <div id='pin_description{{post.id}}'>
                        <p class='modal-desc'>{{post.description}}</p>
                        <p class='modal-post-content'>{{post.post_content}}</p>
                        <p class='modal-user'>{{post.user.name}}</p>
                        <div class="w-full">
                            <form class="form new-comment">
                                <div>
                                    <label for="comment">Add a comment:</label>
                                    <input class="form-control mt-2" id="comment" type="text" name="comment" />
                                </div>
                                <div id="submit">
                                    <button class="comment-btn" type="submit">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class='modal-footer'>
                        <button type='button' class='btn btn-secondary' data-bs-dismiss='modal'>Close</button>
                    </div>

                </div>

            </div>
        </div>

    </div>

    {{/each}}

    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="/js/dashboard.js"></script>