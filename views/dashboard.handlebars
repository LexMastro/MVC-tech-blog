<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{name}}!</h2>
    </div>
</div>
<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Post:</h3>

        <form class="form new-post">
            <div>
                <label for="post-title">Title:</label>
                <input class="form-control" type="text" id="post-title" name="post-title" />
            </div>
            <div class="mt-2">
                <label for="post-description">Description:</label>
                <input class="form-control" type="text" id="post-description" name="post-description"
                    placeholder="Describe your post in a few sentences" />
            </div>
            <div class="mt-2">
                <label for="post-content">Content:</label>
                <textarea class="form-control" id="post-content" name="post-content"></textarea>
            </div>
            <div>
                <button type="submit" class="mt-4">Publish</button>
            </div>
        </form>
    </div>

    {{#if posts.length}}
    <div class="col-md-6 post-list">
        <h3>Published posts:</h3>

        {{#each posts as |post|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
            </div>
            <div class="col-md-4">
                <a class="p-2 comment-link" href="/post/{{post.id}}/edit">
                    Edit</a>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script defer src="/js/create-post.js"></script>